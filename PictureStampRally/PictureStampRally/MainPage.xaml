        <Button x:Name="button3" Content="いわき" HorizontalAlignment="Left" Margin="25,368,0,0" VerticalAlignment="Top" Click="button_Click" Height="91" Width="307" FontSize="48"/>
        <TextBlock x:Name="textBlock" Margin="25,10,0,0" TextWrapping="Wrap" Text="アプリタイトル" VerticalAlignment="Top" Width="307" Height="69" FontSize="48" HorizontalAlignment="Left" TextAlignment="Center"/>
        <TextBlock x:Name="textBlock_Copy" Margin="25,76,0,0" TextWrapping="Wrap" Text="地域を選択してください" VerticalAlignment="Top" Width="307" Height="39" FontSize="30" HorizontalAlignment="Left" TextAlignment="Center"/>

