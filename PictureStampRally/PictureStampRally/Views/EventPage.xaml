<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PictureStampRally.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="using:PictureStampRally.ViewModels"
    x:Class="PictureStampRally.Views.EventPage"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance ViewModels:EventPageViewModel, IsDesignTimeCreatable=True}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <FlipView x:Name="flipView" Margin="20,20,20,20" ItemsSource="{Binding ThemeList, Mode=OneWay}" SelectedItem="{Binding SelectedTheme,Mode=TwoWay}" >
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding ThemeImage}"/>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>

        <Grid Grid.Row="1" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Image  Margin="10" Source="{Binding SelectedCapturedImageUrl}" Stretch="UniformToFill"/>
        </Grid>
    </Grid>
</Page>
